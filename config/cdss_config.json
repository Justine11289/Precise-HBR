    "version": "2.1.0",
    "guideline_source": "Based on PRECISE-HBR bleeding risk assessment for PCI patients",
    "scoring_logic": {
        "scoring_method": "PRECISE-HBR",
        "description": "7-item PRECISE-HBR score for bleeding risk prediction in PCI patients",
        "score_range": "0-50+ points",
        "high_risk_threshold": 23,
        "very_high_risk_threshold": 27,
        "interpretation": "≤22 = non-high risk (<4%), 23-26 = high risk (4-6%), ≥27 = very high risk (≥6%)"
    },
    "precise_hbr_parameters": {
        "age": {
            "description": "Patient age in years",
            "calculation_type": "direct_value",
            "min_value": 20,
            "max_value": 100,
            "score_contribution": "Age-based scoring (exact values need supplemental data)"
        },
        "hemoglobin": {
            "description": "Hemoglobin level in g/dL",
            "calculation_type": "inverse_value",
            "min_value": 8.0,
            "max_value": 18.0,
            "score_contribution": "Lower Hb = higher bleeding risk"
        },
        "egfr": {
            "description": "Estimated glomerular filtration rate in mL/min/1.73m²",
            "calculation_type": "inverse_value",
            "min_value": 15,
            "max_value": 150,
            "score_contribution": "Lower eGFR = higher bleeding risk"
        },
        "white_blood_cell_count": {
            "description": "White blood cell count in ×10⁹/L",
            "calculation_type": "direct_value",
            "min_value": 2.0,
            "max_value": 25.0,
            "enabled": true,
            "score_contribution": "Higher WBC = higher bleeding risk"
        },
        "previous_bleeding": {
            "description": "History of spontaneous bleeding",
            "calculation_type": "binary",
            "score_contribution": "Yes = significant points added"
        },
        "oral_anticoagulation": {
            "description": "Long-term oral anticoagulation therapy",
            "calculation_type": "binary",
            "score_contribution": "Warfarin, DOACs, etc. increase bleeding risk"
        },
        "arc_hbr_factors": {
            "description": "ARC-HBR bleeding risk factors",
            "calculation_type": "binary",
            "factors": [
                "thrombocytopenia",
                "chronic_bleeding_diathesis", 
                "active_malignancy",
                "liver_cirrhosis_portal_hypertension",
                "nsaids_corticosteroids"
            ],
            "score_contribution": "Presence of ≥1 factor increases risk"
        }
    },
